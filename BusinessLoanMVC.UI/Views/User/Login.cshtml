@model BusinessLoanMVC.DataService.User

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>


@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "form" }))

{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>User</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    </div>

    <div class="form-group col-lg-6">
        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10  ">
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group col-lg-6">
        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 me-3 col-md-10">
            <input type="submit" value="Login" class="btn btn-primary" onclick="Login()" />
        </div>
    </div>
    <div>
        <br />
        @Html.ActionLink("New User? SignUp", "SignUp")
    </div>

}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        var status = null;
        function Login(event)
        {
            var data = $("#form").serialize();
            $.ajax({
                type: 'POST',
                url: '/User/Login',
                data:data,
                dataType: 'JSON',
                success: function (data) {
                    status = data.status;
                    if (status == 1) {
                        window.location.href = '@Url.Action("Index", "Admin")';
                    } else if (status == 2) {
                        window.location.href = '@Url.Action("Index", "Customer")';
                    } else if (status == 3) {
                        window.location.href = '@Url.Action("Login", "User")';
                        alert("Username or Password not found!!!");

                    }
                }
            })
        }
    </script>


}
